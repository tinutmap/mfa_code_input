    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch BE",
            "program": "${workspaceFolder}/backend/index.ts",
            "preLaunchTask": "npm: backendTypescript",
            "outFiles": ["${workspaceFolder}/backend/dist/**/*.js"]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch FE",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "npm: start",
        },

    ],
    "compounds": [
        {
            "name": "Run both-ends",
            "configurations": [
                "Launch FE",
                "Launch BE",
            ]
        }
    ],
}